# Сортировка элементов по возрастанию
def qsort(sequence, left, right):
    middle = (left+right) // 2

    p = sequence[middle]
    i,j = left, right
    while i <= j:
        while sequence[i] < p:
            i += 1
        while sequence[j] > p:
            j -= 1
        if i <= j:
            sequence[i], sequence[j] = sequence[j], sequence[i]
            i += 1
            j -= 1

    if j > left:
        qsort(sequence, left, j)
    if right > i:
        qsort(sequence, i, right)
    return sequence


